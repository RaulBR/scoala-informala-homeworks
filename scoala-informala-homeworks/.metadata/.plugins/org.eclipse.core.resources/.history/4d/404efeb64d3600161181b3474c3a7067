		VoteBox voteBox = new VoteBox();
		new VoteThread("1982037357397", "Dick Dastardly", "Muttley"));
		new VoteThread("2909763891982", "Burt Reynolds", "Mr. Bean"));
		new VoteThread("0977187368992", "Ronaldo", "Spirt Mona"));
